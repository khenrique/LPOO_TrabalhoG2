@model IEnumerable<LojaFantasias.Data.Fornecedores>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Inserir Novo Fornecedor", "Create")
</p><br />

@{
    if (IsPost)
    {
        var txtbuscar = Request["txtbuscar"];
    }
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <table>
        <tr>
            <td>
                <input id="txtbuscar" required="required" size="200" type="text"
                       name="txtbuscar" value="" class="form-control" />
            </td>
            <td><input type="submit" value="Buscar" class="btn btn-default" /></td>
        </tr>
    </table><br>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_fornecedor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nome_forn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.qtd_fantasias_fornecidas)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id_fornecedor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nome_forn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.qtd_fantasias_fornecidas)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.id_fornecedor }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_fornecedor }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_fornecedor })
        </td>
    </tr>
}

</table>
